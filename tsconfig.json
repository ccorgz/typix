{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "types": ["jest"]
    },
    "include": [
      "src/**/*",
      "test/**/*"
    ]
  }
  